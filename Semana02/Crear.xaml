<Window x:Class="Semana02.Crear"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Semana02"
        mc:Ignorable="d"
        Title="Crear" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Peso Maximo: "/>
            <TextBox x:Name="Pesomaximo" Height="20" Width="200" />

            <Label Content="Placa: "/>
            <TextBox x:Name="Placa" Height="20" Width="200" TextChanged="Placa_TextChanged" />

            <Label Content="Peso Vacio: "/>
            <TextBox x:Name="Pesovacio" Height="20" Margin="0,0,0,10" Width="200" />

            <Button Content="Registrar"  Height="20" Width="100" />
        </StackPanel>
    </Grid>
</Window>
