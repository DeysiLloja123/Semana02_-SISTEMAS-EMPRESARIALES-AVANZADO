<Window x:Class="Semana02.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Semana02"
        mc:Ignorable="d"
        Title="login" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Ingresar Usuario: "/>
            <TextBox x:Name="Usuario" Height="30" Width="200"/>

            <Label Content="Ingrese Password: "/>
            <PasswordBox x:Name="Password" Height="30" Width="200" Margin="0,0,0,10"/>

            <Button Content="Ir al menú" Height="30" Width="100" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
